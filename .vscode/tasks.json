{
  "tasks": [
    {
      "label": "clang compile",
      "type": "process",
      "command": "clang++",
      "args": [
        "${file}",
        "-g",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}",
        "-Wall",
        "-stdlib=libc++",
        "-std=c++17",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${fileDirname}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "version": "2.0.0"
}